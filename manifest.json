{
    "manifest_version": 2,
    "name": "AutoReaderView",
    "version": "1.0",

    "description": "Uses reader view automatically when possible.",
    "homepage_url": "https://github.com/codyherzog/AutoReaderView",

    "permissions": ["activeTab", "<all_urls>", "storage"],

    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },

    "browser_action": {
        "default_icon": "icons/icon-96.png",
        "default_title": "Auto Reader View",
        "default_popup": "popup/popup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
